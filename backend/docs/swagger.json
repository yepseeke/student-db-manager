        "/add_qualification_work": {
            "post": {
                "description": "Добавить квалификационную работу",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Добавление квалификационной работы",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID студента",
                        "name": "student_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "ID профессора",
                        "name": "supervisor_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Наименование работы",
                        "name": "name",
                        "in": "query",
                        "required": true
                    },
                    {
                        "enum": [
                            "course",
                            "diploma",
                            "master",
                            "dissertation"
                        ],
                        "type": "string",
                        "description": "Тип работы",
                        "name": "work_type",
                        "in": "query",
                        "required": true
                    },
                    {
                        "enum": [
                            "complete",
                            "in progress"
                        ],
                        "type": "string",
                        "description": "Статус работы",
                        "name": "work_status",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Оценка",
                        "name": "grade",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
